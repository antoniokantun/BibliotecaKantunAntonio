@model BibliotecaKantunAntonio.Models.Domain.Usuario

<div class="flex flex-col md:flex-row min-h-screen bg-gray-100">
    <!-- Sidebar -->
    <div class="w-full md:w-64">
        @await Html.PartialAsync("_Sidebar")
    </div>

    <!-- Contenido principal -->
    <div class="flex-1 p-6">
        <div class="max-w-2xl mx-auto">
            <div class="bg-white rounded-lg shadow-md">
                <div class="bg-slate-800 text-white p-4 rounded-t-lg">
                    <h1 class="text-xl font-semibold">@(ViewContext.RouteData.Values["action"].ToString() == "Crear" ? "Crear Usuario" : "Editar Usuario")</h1>
                </div>

                <div class="p-6">
                    <form asp-controller="Usuario" asp-action="Post" method="post">
                        @if (ViewContext.RouteData.Values["action"].ToString() == "Editar")
                        {
                            <input type="hidden" asp-for="PkUsuario" />
                        }

                        <div class="space-y-4">
                            <div>
                                <label asp-for="Nombre" class="block text-sm font-medium text-gray-700">Nombre</label>
                                <input asp-for="Nombre"
                                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" />
                                <span asp-validation-for="Nombre" class="text-sm text-red-600"></span>
                            </div>

                            <div>
                                <label asp-for="Apellido" class="block text-sm font-medium text-gray-700">Apellido</label>
                                <input asp-for="Apellido"
                                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" />
                                <span asp-validation-for="Apellido" class="text-sm text-red-600"></span>
                            </div>

                            <div>
                                <label asp-for="UserName" class="block text-sm font-medium text-gray-700">Usuario</label>
                                <input asp-for="UserName"
                                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" />
                                <span asp-validation-for="UserName" class="text-sm text-red-600"></span>
                            </div>

                            <div>
                                <label asp-for="Password" class="block text-sm font-medium text-gray-700">Contraseña</label>
                                <input asp-for="Password" type="password"
                                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500" />
                                <span asp-validation-for="Password" class="text-sm text-red-600"></span>
                            </div>

                            <div>
                                <label asp-for="FkRol" class="block text-sm font-medium text-gray-700">Rol</label>
                                <select asp-for="FkRol" asp-items="ViewBag.Roles"
                                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500">
                                    <option value="">-- Selecciona un rol --</option>
                                </select>
                                <span asp-validation-for="FkRol" class="text-sm text-red-600"></span>
                            </div>

                            <div class="flex justify-end space-x-3 pt-4">
                                <a asp-controller="Usuario" asp-action="Index"
                                   class="px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                                    Cancelar
                                </a>
                                <button type="submit"
                                        class="px-4 py-2 bg-indigo-600 text-white rounded-md text-sm font-medium hover:bg-indigo-700">
                                    Guardar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}