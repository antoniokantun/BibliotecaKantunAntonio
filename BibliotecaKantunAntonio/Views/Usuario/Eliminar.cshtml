@model BibliotecaKantunAntonio.Models.Domain.Usuario

<div class="flex flex-col md:flex-row min-h-screen bg-gray-100">
    <!-- Sidebar -->
    <div class="w-full md:w-64">
        @await Html.PartialAsync("_Sidebar")
    </div>

    <!-- Contenido principal -->
    <div class="flex-1 p-6">
        <div class="max-w-lg mx-auto">
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="text-center">
                    <svg class="mx-auto h-12 w-12 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>

                    <h3 class="mt-4 text-lg font-medium text-gray-900">Eliminar Usuario</h3>

                    <p class="mt-2 text-sm text-gray-500">
                        ¿Estás seguro de que deseas eliminar al usuario <span class="font-medium">@Model.Nombre @Model.Apellido</span>?
                        Esta acción no se puede deshacer.
                    </p>

                    <div class="mt-6 flex justify-center space-x-3">
                        <form asp-action="Eliminar" method="post">
                            <input type="hidden" asp-for="PkUsuario" />

                            <a asp-action="Index"
                               class="inline-flex justify-center px-4 py-2 border border-gray-300 rounded-md text-sm font-medium text-gray-700 hover:bg-gray-50">
                                Cancelar
                            </a>

                            <button type="submit"
                                    class="inline-flex justify-center px-4 py-2 bg-red-600 text-white rounded-md text-sm font-medium hover:bg-red-700">
                                Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>