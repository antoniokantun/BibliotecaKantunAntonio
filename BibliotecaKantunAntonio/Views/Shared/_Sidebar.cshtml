    <nav>
        <ul class="space-y-4">
            <li>
                <a asp-controller="Home" asp-action="Index"
                   class="flex items-center space-x-3 p-3 rounded-lg hover:bg-slate-700 transition-colors">
                    <span class="text-xl">🏠</span>
                    <span>Inicio</span>
                </a>
            </li>
            <li>
                <a asp-controller="Usuario" asp-action="Index"
